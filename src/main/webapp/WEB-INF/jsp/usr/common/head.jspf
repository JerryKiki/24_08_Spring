<!DOCTYPE html>
<html data-theme="light">
<head>
<meta charset="UTF-8">
<title>${pageTitle }</title>
<link rel="stylesheet" href="/resource/common.css" />
<script src="/resource/common.js" defer="defer"></script>
<!-- 제이쿼리 -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<!-- 폰트어썸 -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<!-- 폰트어썸 FREE 아이콘 리스트 : https://fontawesome.com/v5.15/icons?d=gallery&p=2&m=free -->

<!-- 테일윈드 -->
<!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.1.4/tailwind.min.css">  -->
<!-- 테일윈드 치트시트 : https://nerdcave.com/tailwind-cheat-sheet -->
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2/dist/tailwind.min.css" rel="stylesheet" type="text/css" />

<!-- daisyUI -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/daisyui/4.12.10/full.css" />

<link rel="stylesheet" type="text/css" href="slick/slick.css"/>
<!-- // Add the new slick-theme.css if you want the default styling -->
<link rel="stylesheet" type="text/css" href="slick/slick-theme.css"/>

<script>
  // 테마를 전환하는 함수
  function Theme__toggle() {
    const theme = localStorage.getItem('theme') ?? 'light';

    if (theme == 'light') {
      localStorage.setItem('theme', 'dark');
      Theme__applyTo('dark'); // 테마를 어두운 테마로 설정
    } else {
      localStorage.setItem('theme', 'light');
      Theme__applyTo('light'); // 테마를 밝은 테마로 설정
    }
  }

  // 특정 테마를 적용하는 함수
  function Theme__applyTo(themeName) {
    $('html').attr('data-theme', themeName);
  }

  // 초기 테마 설정 함수
  function Theme__init() {
    const theme = localStorage.getItem('theme') ?? 'light';
    Theme__applyTo(theme);
  }

  // 문서 로드 완료 시 초기 테마 설정
  $(document).ready(function () {
    Theme__init();
  });
</script>

</head>
<body>
	<header class="w-full">
		<div class="flex h-20 mx-auto items-center justify-between text-3xl p-8">
			<div><a href="/">LOGO</a></div>
			<ul class="flex justify-between w-5/12">
				<li class="">
					<a class="h-full px-3 flex items-center btn-theme-toggle" href="javascript:Theme__toggle();">
						<span>🌞</span>
						<span>🌚</span>
					</a>
				</li>
				<li><a class="hover:underline" href="/">HOME</a></li>
				<li class="board_menu">
					<a class="hover:underline" href="../article/getArticles">LIST</a>
					<ul>
						<li><a href="../article/getArticles?boardId=1">Notice</a></li>
						<li><a href="../article/getArticles?boardId=2">Free</a></li>
						<li><a href="../article/getArticles?boardId=3">QnA</a></li>
					</ul>
				</li>
				<c:if test="${!isLogined }">
					<li><a class="hover:underline" href="../member/doLogin">LOGIN</a></li>
					<li><a class="hover:underline" href="../member/doJoin">JOIN</a></li>
				</c:if>
				<c:if test="${isLogined }">
					<li><a class="hover:underline" href="../member/doLogout">LOGOUT</a></li>
					<li><a class="hover:underline" href="../member/myPage">MYPAGE</a></li>
				</c:if>
			</ul>
		</div>
	</header>
	
